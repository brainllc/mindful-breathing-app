{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*\\.mp3)$",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "audio/mpeg"
      }
    },
    {
      "src": "/assets/(.*\\.css)$",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/assets/(.*\\.js)$",
      "dest": "/assets/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/(.*\\.mp3)$",
      "dest": "/$1",
      "headers": {
        "Content-Type": "audio/mpeg"
      }
    },
    {
      "src": "(.*\\.css)$",
      "dest": "/$1",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/(.*\\.js)$",
      "dest": "/$1",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/images/(.*\\.(jpg|jpeg|png|gif|webp|svg))$",
      "dest": "/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/(.*\\.(jpg|jpeg|png|gif|webp|svg))$",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/favicon\\.ico$",
      "dest": "/favicon.ico",
      "headers": {
        "Content-Type": "image/x-icon"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 